{
  "compilerOptions": {
    "outDir": "./dist/lib/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "ES5",
    "allowJs": true
  },
  "include": ["./src/**/*"]
}
